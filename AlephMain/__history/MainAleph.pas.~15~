unit MainAleph;

interface

uses
  System.SysUtils,
  System.Classes,
  FMX.Types,
  FMX.Controls,
  FMX.Controls.Presentation,
  FMX.StdCtrls,
  FMX.Objects,
  FMX.Forms,
  System.Generics.Collections;

type
  TREmSize = class(TPersistent)
  private
    FFontBase: Single;
    FREM: Single;
    FPixelValue: Single; // Armazena o valor em pixels
    FOnChange: TNotifyEvent;
    procedure SetFontBase(const Value: Single);
    procedure SetREM(const Value: Single);
    procedure SetOnChange(const Value: TNotifyEvent);
    procedure UpdatePixelValues; // Nova procedure para centralizar a lógica
  public
    constructor Create(ABaseSize: Single);
    destructor Destroy; override;
    function ToPixels: Single;
  published
    property REM: Single read FREM write SetREM;
    property FontBase: Single read FFontBase write SetFontBase;
    property OnChange: TNotifyEvent read FOnChange write SetOnChange;
  end;

  TREmMargins = class(TControl)
  private
    FTop: TREmSize;
    FLeft: TREmSize;
    FRight: TREmSize;
    FBottom: TREmSize;
    procedure SetBottom(const Value: TREmSize);
    procedure SetLeft(const Value: TREmSize);
    procedure SetRight(const Value: TREmSize);
    procedure SetTop(const Value: TREmSize);
    procedure OnChange(Sender: TObject);
  public
    constructor Create(AOwner: TComponent; BaseSize: Single);
    destructor Destroy; override;
    procedure ApplyToControl(AControl: TControl);
  published
    property Top: TREmSize read FTop write SetTop;
    property Left: TREmSize read FLeft write SetLeft;
    property Right: TREmSize read FRight write SetRight;
    property Bottom: TREmSize read FBottom write SetBottom;
  end;

  TMainAleph = class(TPersistent)
  end;

implementation

{ TRemSize }

constructor TREmSize.Create(ABaseSize: Single);
begin
  FFontBase := ABaseSize;
  FREM := 1; // Valor padrão de 1 rem
  UpdatePixelValues; // Inicializa o valor em pixels
end;

destructor TREmSize.Destroy;
begin
  inherited Destroy;
end;

procedure TREmSize.SetFontBase(const Value: Single);
begin
  if FFontBase <> Value then
  begin
    FFontBase := Value;
    UpdatePixelValues; // Atualiza o valor em pixels
  end;
end;

procedure TREmSize.SetOnChange(const Value: TNotifyEvent);
begin
  FOnChange := Value;
end;

procedure TREmSize.SetREM(const Value: Single);
begin
  if FREM <> Value then
  begin
    FREM := Value;
    UpdatePixelValues; // Atualiza o valor em pixels
    if Assigned(FOnChange) then
      FOnChange(Self);
  end;
end;

procedure TREmSize.UpdatePixelValues;
begin
  // Atualiza o valor em pixels
  FPixelValue := FREM * FFontBase;
end;

function TREmSize.ToPixels: Single;
begin
  // Garante que o valor em pixels esteja atualizado
  UpdatePixelValues;
  Result := FPixelValue;
end;

{ TREmMargins }

constructor TREmMargins.Create(AOwner: TComponent; BaseSize: Single);
begin
  inherited Create(AOwner);
  FTop := TREmSize.Create(BaseSize);
  FLeft := TREmSize.Create(BaseSize);
  FRight := TREmSize.Create(BaseSize);
  FBottom := TREmSize.Create(BaseSize);
  // Adiciona handlers para mudança de propriedades
  FTop.OnChange := OnChange;
  FLeft.OnChange := OnChange;
  FRight.OnChange := OnChange;
  FBottom.OnChange := OnChange;
end;

destructor TREmMargins.Destroy;
begin
  FTop.Free;
  FLeft.Free;
  FRight.Free;
  FBottom.Free;
  inherited Destroy;
end;

procedure TREmMargins.OnChange(Sender: TObject);
begin
  // Método chamado quando alguma propriedade é alterada
  // Pode ser usado para notificar o controle pai sobre a mudança
end;

procedure TREmMargins.ApplyToControl(AControl: TControl);
begin
  if Assigned(AControl) then
  begin
    AControl.Margins.Top := FTop.ToPixels;
    AControl.Margins.Left := FLeft.ToPixels;
    AControl.Margins.Right := FRight.ToPixels;
    AControl.Margins.Bottom := FBottom.ToPixels;
  end;
end;

procedure TREmMargins.SetBottom(const Value: TREmSize);
begin
  FBottom.Assign(Value);
end;

procedure TREmMargins.SetLeft(const Value: TREmSize);
begin
  FLeft.Assign(Value);
end;

procedure TREmMargins.SetRight(const Value: TREmSize);
begin
  FRight.Assign(Value);
end;

procedure TREmMargins.SetTop(const Value: TREmSize);
begin
  FTop.Assign(Value);
end;

end.

