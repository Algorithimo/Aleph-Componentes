unit LayoutPlus;

interface

uses
  System.SysUtils,
  System.Classes,
  FMX.Types,
  FMX.Controls,
  FMX.Layouts,
  Builder_Impl;

type
  TLayoutPlus = class(TComponent)
  private
    FBuilder: IBuilder;
    procedure SetBuilder(const Value: IBuilder);
  published
    property Builder: IBuilder read FBuilder write SetBuilder;
  end;

procedure Register;

implementation

procedure Register;
begin
  RegisterComponents('Aleph', [TLayoutPlus]);
end;

{ TLayoutPlus }

procedure TLayoutPlus.SetBuilder(const Value: IBuilder);
begin
  FBuilder := Value;
end;

end.
